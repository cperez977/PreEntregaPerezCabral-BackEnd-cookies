<!-- views/messages.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./styles.css">
    <title>Messages</title>
    
</head>
<body>
    <h1>Messages</h1>

    <ul>
        {{#each messages}}
            <li>
                <p class="user">{{user}}</p>
                <p class="message">{{message}}</p>
                </li>
        {{/each}}
    </ul>
</body>
</html>
